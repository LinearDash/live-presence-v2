generator client {
  provider = "prisma-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(cuid())
  name     String
  email    String? @unique
  isActive Boolean @default(false)
  colour   String  @default("#3B82F6") // Blue in hex

  // New fields based on requirements
  urls            String[] // Array of URLs
  totalActiveTime Int      @default(0) // Total active time in seconds
  bio             String? // User bio (optional)

  // Timestamps
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  lastActiveAt DateTime @default(now())
}
